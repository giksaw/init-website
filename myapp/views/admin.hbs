<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>Admin Dashboard</title>
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }
        .container {
            margin-top: 2rem;
        }
        .card {
            background-color: #1e1e1e;
            border: 1px solid #333;
        }
        .card-header {
            background-color: #333;
            color: #e0e0e0;
        }
        .form-label {
            color: #e0e0e0;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-danger {
            background-color: #dc3545;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Admin Dashboard</h1>

        <!-- Add Event Form -->
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Add Event</h5>
            </div>
            <div class="card-body">
                <form action="/admin/addEvent" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="eventTitle" class="form-label">Event Title</label>
                        <input type="text" class="form-control" id="eventTitle" placeholder="Enter event title" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="eventDescription" class="form-label">Event Description</label>
                        <textarea class="form-control" id="eventDescription" rows="3" placeholder="Enter event description" name="desc"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="eventImage" class="form-label">Event Image URL</label>
                        <input type="file" class="form-control" id="eventImage" placeholder="Upload image" name="image">
                    </div>
                    <div class="mb-3">
                        <label for="eventFee" class="form-label">Registration Fees</label>
                        <input type="number" class="form-control" id="eventFee" placeholder="Enter registration fees" name="fees">
                    </div>
                    <div class="mb-3">
                        <label for="eventCoordinators" class="form-label">Coordinators' Names</label>
                        <input type="text" class="form-control" id="eventCoordinators" placeholder="Enter coordinators' names" name="coordinator">
                    </div>
                    <div class="mb-3">
                        <label for="eventVenue" class="form-label">Event Venue</label>
                        <input type="text" class="form-control" id="eventVenue" placeholder="Enter event venue" name="venue">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Event</button>
                </form>
            </div>
        </div>

        <!-- Add Member Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Add Member</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="memberName" class="form-label">Member Name</label>
                        <input type="text" class="form-control" id="memberName" placeholder="Enter member name">
                    </div>
                    <div class="mb-3">
                        <label for="memberRole" class="form-label">Role</label>
                        <input type="text" class="form-control" id="memberRole" placeholder="Enter member role">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Member</button>
                </form>
            </div>
        </div>

        <!-- Convert Member to Past Member Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Convert Member to Past Member</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="pastMemberName" class="form-label">Member Name</label>
                        <input type="text" class="form-control" id="pastMemberName" placeholder="Enter member name">
                    </div>
                    <button type="submit" class="btn btn-primary">Convert</button>
                </form>
            </div>
        </div>

        <!-- Remove Event or Member -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Remove Event or Member</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="removeType" class="form-label">Remove</label>
                        <select class="form-select" id="removeType">
                            <option selected>Select type</option>
                            <option value="event">Event</option>
                            <option value="member">Member</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="removeId" class="form-label">ID</label>
                        <input type="text" class="form-control" id="removeId" placeholder="Enter ID to remove">
                    </div>
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
